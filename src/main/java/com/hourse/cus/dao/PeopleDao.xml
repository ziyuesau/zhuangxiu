<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hourse.cus.dao.PeopleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hourse.cus.entity.PeopleEntity" id="peopleMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
    </resultMap>

	<select id="queryObject" resultType="com.hourse.cus.entity.PeopleEntity">
		select * from t_people where id = #{value}
	</select>

	<select id="queryList" resultType="com.hourse.cus.entity.PeopleEntity">
		select * from t_people
		<where>
			<if test="name != null and name.trim() != ''">
				and  `name` like concat('%',#{name},'%')
			</if>
 
		</where>
		
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id asc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_people 
		<where>
			<if test="name != null and name.trim() != ''">
				and  `name` like concat('%',#{name},'%')
			</if>
 
		</where>
	</select>
	 
	<insert id="save" parameterType="com.hourse.cus.entity.PeopleEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_people
		(
			`name`, 
			`price`
		)
		values
		(
			#{name}, 
			#{price}
		)
	</insert>
	 
	<update id="update" parameterType="com.hourse.cus.entity.PeopleEntity">
		update t_people 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="price != null">`price` = #{price}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_people where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_people where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>